<div id="calc" class="calc">

<input id="calc_a" class="calc_input" type="text" placeholder="число А">
<select id="calc_operation" class="calc_select">
  <option value="+">Сложение</option>
  <option value="-">Вычитание</option>
  <option value="*">Умножение</option>
  <option value="/">Деление</option>
</select>
<input id="calc_b" class="calc_input" type="text"  placeholder="число B">
<div id="calc_result" class="calc_result"></div>

</div>